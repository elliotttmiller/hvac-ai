# HVAC AI Platform - Environment Variables Example
# Copy this file to .env.local and fill in your values

# =============================================================================
# Frontend Configuration (Next.js)
# =============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# API Endpoints
# IMPORTANT: Set this to your backend service URL
# For local development, use http://localhost:8000
# For production, use your deployed backend URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# Authentication
NEXT_PUBLIC_ENFORCE_AUTH=false

# =============================================================================
# Backend Configuration (Python/FastAPI)
# =============================================================================

# SAM Model Configuration
# CRITICAL: This must point to a valid SAM model checkpoint file (.pth)
# The backend will fail to start analysis features if this is not configured correctly
# MODEL_PATH is the primary variable; SAM_MODEL_PATH is kept for backward compatibility
# 
# Download the model from your training pipeline or use a pretrained SAM model
# Place it in the models/ directory (you may need to create this directory)
MODEL_PATH=./models/sam_hvac_finetuned.pth
SAM_MODEL_PATH=./models/sam_hvac_finetuned.pth

# GPU Configuration (for Docker)
CUDA_VISIBLE_DEVICES=0

# Secure tunneling (development)
NGROK_AUTHTOKEN=your-ngrok-token

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/hvacai

# =============================================================================
# Development Settings
# =============================================================================

# Node Environment
NODE_ENV=development

# Enable debugging
# DEBUG=true

# =============================================================================
# Production Settings (uncomment for production)
# =============================================================================

# NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_ENFORCE_AUTH=true
# NODE_ENV=production
